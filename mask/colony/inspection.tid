! Hive state

<table>
    <thead>
        <tr>
            <th></th>
            <th>Frames</th>
            <th>Honeyroom</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>Current</th>
            <td>
                <$list filter="[list[!!inspection]!frames[]first[1]]" emptyMessage="-">
                    <$transclude field="frames" />
                </$list>
            </td>
            <td>
                <$list filter="[list[!!inspection]!honeyroom[]first[1]]" emptyMessage="-">
                    <$reveal state="!!honeyroom" text="1" type="match">yes</$reveal>
                    <$reveal state="!!honeyroom" text="1" type="nomatch">no</$reveal>
                </$list>
            </td>
        </tr>
        <tr>
            <th>New</th>
            <td><$edit-text tiddler=<<target>> field="frames" type="number" /></td>
            <td>
                <$radio tiddler=<<target>> field="honeyroom" value="1">added</$radio>
                <$radio tiddler=<<target>> field="honeyroom" value="0">removed</$radio>
            </td>
        </tr>
    </tbody>
</table>

