title: $:/plugins/iceity/beehive/view/main/listhive
caption: Hives

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        <$list filter="[tag[hive]active[yes]!sort[date]]">
            <tr>
                <td><$link to={{!!title}}>{{!!name}}</$link></td>
                <td>{{!!date}}</td>
                <td>{{!!text}}</td>
            </tr>
        </$list>
    </tbody>
</table>
