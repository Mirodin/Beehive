title: $:/plugins/iceity/beehive/view/hive/list/task
caption: Tasks

<table>
    <thead>
        <th>Due</th>
        <th>Notes</th>
    </thead>
    <tbody>
        <$list filter="[tag[task]hive-id{!!title}done[0]!sort[date]]">
